<%- include('../partials/head') %> <%- include('../partials/navigation') %>

<h1>Home</h1>

<h2>Annonces disponibles</h2>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>Titre</th>
      <th>Ville</th>
      <th>Code postal</th>
      <th>Prix</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% annonces.forEach((annonce) => { %>
    <tr>
      <td><%= annonce._id %></td>
      <td><%= annonce.titre %></td>
      <td><%= annonce.ville %></td>
      <td><%= annonce.code_postal %></td>
      <td><%= annonce.prix %></td>
      <td><a href="/annonce/<%= annonce._id %>">Voir details</a></td>
      <td><a href="/update/annonce/<%= annonce._id %>">Modifier</a></td>
      <td>
        <button type="button" onclick="deleteAnnonce('<%= annonce._id %>')">
          Supprimer
        </button>
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>